# Environment Configuration File
# Copy this file to .env and update the values as needed

# Application Settings
APP_NAME="CI/CD Pipeline API"
APP_VERSION="1.0.0"
DEBUG=false
ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@db:5432/cicd_pipeline

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# Docker Registry Settings
DOCKER_REGISTRY_URL=ghcr.io
DOCKER_REGISTRY_USERNAME=your-username
DOCKER_REGISTRY_PASSWORD=your-token

# CI/CD Settings
WEBHOOK_SECRET=your-webhook-secret
MAX_PIPELINE_DURATION=3600
MAX_CONCURRENT_PIPELINES=5

# Monitoring Settings
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO

# File Storage Settings
ARTIFACTS_STORAGE_PATH=./artifacts
MAX_ARTIFACT_SIZE_MB=100

# External Services (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
GITHUB_TOKEN=ghp_your_github_token
GITLAB_TOKEN=glpat-your_gitlab_token

# Cloud Provider Settings (for production deployments)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2

AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY=path/to/service-account-key.json
